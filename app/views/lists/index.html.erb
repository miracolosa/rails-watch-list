<div class="container my-2 pt-5">

  <%# header %>
  <div class="header text-center my-4">
    <i class="fa-solid fa-film fs-1 text-light"></i>
    <h1 class="text-light py-3">your movie lists</h1>
  </div>

  <%# cards %>
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list_path(list), class: "text-decoration-none text-reset" %>
    </div>
    <% end %>
  </div>

  <%# button %>
  <div class="d-flex justify-content-center my-4">
    <%= link_to "Create a new list", new_list_path, class: "btn btn-outline-light" %>
  </div>
</div>
